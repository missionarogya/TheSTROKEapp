<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bkg"
    tools:context="missionarogya.thestrokeapp.HospitalInformationList">

    <ScrollView
        android:id="@+id/layout"
        android:layout_height="match_parent"
        android:scrollbars="horizontal|vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true">

        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dip">

            <TableLayout
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="170dp"
                android:background="#58ACFA">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/white"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="  Hospital  "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:textStyle="bold"
                        android:id="@+id/textView1"
                        android:layout_column="1"
                        android:layout_marginRight="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="  Phone number  "
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/textView2"
                        android:layout_column="2"
                        android:clickable="true"/>

                    <TextView
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:text="  STAR rating  "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="2dp"
                        android:textStyle="bold"
                        android:id="@+id/textViewStarRatingHeading"
                        android:layout_column="3" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/white"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:text="  AMRI  "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="2dp"
                        android:textStyle="bold"
                        android:id="@+id/textViewHospital"
                        android:layout_column="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="  9432941375  "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="2dp"
                        android:textStyle="normal"
                        android:clickable="true"
                        android:id="@+id/textViewPhoneNumber"
                        android:layout_column="2" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/r2"
                        android:layout_column="3"
                        android:background="@android:color/black"
                        android:layout_marginRight="2dp"/>

                </TableRow>
            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>
    <ImageButton
        android:id="@+id/kmes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="125dp"
        android:clickable="true"
        android:background="@android:color/transparent"
        android:contentDescription="kmes"
        android:src="@drawable/kmes1"
        android:scaleType="fitXY" />
    <ImageButton
        android:id="@+id/stroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:background="@android:color/transparent"
        android:contentDescription="stroke"
        android:layout_toEndOf="@+id/doctor"
        android:src="@drawable/stroke1"
        android:scaleType="fitXY" />
    <ImageButton
        android:id="@+id/doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/kmes"
        android:clickable="true"
        android:background="@android:color/transparent"
        android:contentDescription="doctor"
        android:src="@drawable/doctor1"
        android:scaleType="fitXY" />
    <Button
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:textSize="5pt"
        android:id="@+id/logout"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:id="@+id/textView24" />

</RelativeLayout>
